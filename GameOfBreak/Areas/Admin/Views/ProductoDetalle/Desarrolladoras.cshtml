@model GameOfBreak.Models.PaginationViewModel<GameOfBreak.Models.GoB.Desarrolladora>
@{
    ViewBag.Title = "Desarrolladoras";

    var desarrolladoras = Model.Items;
    var pager = Model.Pager;
}

<h2>Desarrolladoras</h2>

@Html.ActionLink("Nueva Desarrolladora", "AgregarDesarrolladora", "ProductoDetalle", null, new { @class = "btn btn-default"})

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Desarrolladora</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var desarrolladora in desarrolladoras) {
            <tr>
                <td>@desarrolladora.Desarrolladora1</td>
                <td>

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Accion
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <li>@Html.ActionLink("Editar", "EditarDesarrolladora", "ProductoDetalle", new { idDesarrolladora = desarrolladora.ID_DESARROLLADORA }, null)</li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="row">

    <div class="col-sm-6">
        <nav aria-label="Page navigation">
            <ul class="pagination">

                @for (int i = pager.StartPage; i <= pager.EndPage; i++) {
                    <li class="@(i == pager.CurrentPage ? " active": ")" )">@Html.ActionLink(i.ToString(), "Desarrolladoras", "ProductoDetalle", new { page = i, count = pager.TotalItems }, null)</li>
                }

            </ul>
        </nav>
    </div>

    <div class="col-sm-6">
        Total de registros obtenidos:
        <div class="badge">
            @pager.TotalItems
        </div>
    </div>

</div>