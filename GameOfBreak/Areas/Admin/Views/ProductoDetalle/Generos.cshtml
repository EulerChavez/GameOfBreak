@model GameOfBreak.Models.PaginationViewModel<GameOfBreak.Models.GoB.Genero>
@{
    ViewBag.Title = "Generos";

    var generos = Model.Items;
    var pager = Model.Pager;
}

<h2>Generos</h2>

@Html.ActionLink("Nuevo genero", "AgregarGenero", "ProductoDetalle", null, new { @class = "btn btn-default" })

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Genero</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genero in generos) {
            <tr>
                <td>@genero.Genero1</td>
                <td>

                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Accion
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <li>@Html.ActionLink("Editar", "EditarGenero", "ProductoDetalle", new { idGenero = genero.ID_GENERO }, null)</li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="row">

    <div class="col-sm-6">
        <nav aria-label="Page navigation">
            <ul class="pagination">

                @for (int i = pager.StartPage; i <= pager.EndPage; i++) {
                    <li class="@(i == pager.CurrentPage ? " active": ")" )">@Html.ActionLink(i.ToString(), "Generos", "ProductoDetalle", new { page = i, count = pager.TotalItems }, null)</li>
                }

            </ul>
        </nav>
    </div>

    <div class="col-sm-6">
        Total de registros obtenidos:
        <div class="badge">
            @pager.TotalItems
        </div>
    </div>

</div>