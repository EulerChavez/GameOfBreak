@model GameOfBreak.Models.PaginationViewModel<GameOfBreak.Models.GoB.Ciudad>
@{
    ViewBag.Title = "Ciudades";
    var ciudades = Model.Items;
    var pager = Model.Pager;
}

<h2>Ciudades</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Ciudad</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ciudad in ciudades) {

            <tr>
                <td>@ciudad.Ciudad1</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Accion
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                            <li>@Html.ActionLink("Editar", "EditarCiudad", "Directorio", new { idCiudad = ciudad.ID_CIUDAD }, null)</li>
                            @*<li>@Html.ActionLink("Eliminar", "", "")</li>*@
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">

    <nav aria-label="Page navigation">
        <ul class="pagination">

            @for (int i = pager.StartPage; i <= pager.EndPage; i++) {
                <li class="@(i == pager.CurrentPage ? " active": ")" )">@Html.ActionLink(i.ToString(), "Ciudades", "Directorio", new { page = i, count = pager.TotalItems }, null)</li>
            }

        </ul>
    </nav>

    <div>
        Total de registros obtenidos:
        <div class="badge">
            @pager.TotalItems
        </div>
    </div>

</div>