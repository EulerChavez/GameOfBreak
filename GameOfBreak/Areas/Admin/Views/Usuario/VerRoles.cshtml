    var roles = Model.Items;
    var pager = Model.Pager;
}

<h2>Roles</h2>

@Html.ActionLink("Nuevo Rol", "RegisterRole", "Account", new { area = "" }, new { @class = "btn btn-default"})

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in roles) {
            <tr>
                <td>@role.Name</td>
